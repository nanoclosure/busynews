<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical" >
  <TextView android:id="@+id/news_list_item_titleTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:text="news title" />
  
  <TextView android:id="@+id/news_list_item_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/news_list_item_titleTextView"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:text="news description" />
  
  <TextView android:id="@+id/news_list_item_dateTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/news_list_item_description"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    android:text="news date" />
</RelativeLayout>